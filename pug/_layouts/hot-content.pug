block settings
    - var title = 'Attitude Convention Center'
doctype
html(lang="pt")
    head
        include ../_partials/meta-tags
        include ../_partials/icons
        <link rel="apple-touch-icon" href="icon.png"> 
        title #{title}
        block CSS
            link(rel="stylesheet", href="css/plugins.css")

    body      
        #loader
            img.loader-img.img-responsive(src="img/loader.png", alt="Lodder")
        #wrraper.background.relative
            include ../_partials/menu.pug


            block header
                section#topo
                    header
                        .container-fluid
                            .row
                                .col-xs-2
                                    img.icone-interrogacao.img-responsive(src="img/interrogacao.png", alt="Ajuda")
                                .col-xs-8
                                    img.img-topo.img-responsive(src="img/logo-topo.png", alt="Logo")
                                .col-xs-2
                                    a(href="#")
                                        img.icone-menu.img-responsive(src="img/menu.png", alt="")         

    
            block content

            block footer
                footer
                    .container
                        .row
                            .col-sm-12
                                img.img-responsive.center-block(src="img/after-article.png", alt="Imagem")
                        .row
                            .col-sm-12
                                img.img-responsive.center-block(src="img/logo-footer.png", alt="Logo rodap√©")
                    

        block scriptsJS
            script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")
            script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")

            