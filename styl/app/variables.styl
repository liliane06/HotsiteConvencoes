
// Breakpoints
$queries = {
	'small' : 576px,
	'medium' : 768px,
	'large' : 992px,
	'x-large': 1200px
}

// COLORS //
$colors = {
	'black': #333333,
	'text': 'black',
	'oceano': #41babb,
	'inverse':white,
	'fundo': #272d4c,
}

$shadow-color = #9e9c9c;

// fonts
$fonts-family = 'Josefin Sans', sans-serif

$font-color-default = $colors['text']

// defina os tamanhos da tag H
$hs-sizes = {
	'h1' : 45px,
	'h2' : 40px,
	'h3' : 35px,
	'h4' : 30px,
	'h5' : 20px,
	'h6' : 20px
}


// fonts porcentagem em monitores abaixo de 728
$font-medium = 0.9;
$font-medium-align = left

// fonts porcentagem 528
$font-xs = 0.7;
$font-xs-align = center

// btn default setting
$btn-bg = transparent
$btn-text = $colors['oceano']

// tamanho de fontes
$font-size = {
	'extra-small' 	: 9px,
	'small' 		: 12px,
	'medium'		: 15px,
	'large'			: 18px,
	'extra-large'	: 22px		
}
$letterSpacing = 1px
$lineHeight = 30px

// padding
$pad_marg = {
	'20' : 20px,
	'40' : 40px,
	'60' : 60px,
	'80' : 80px,
	'120' : 120px
}